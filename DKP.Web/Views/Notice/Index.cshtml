@{
    Layout = "~/Views/Shared/_RightTableLayout.cshtml";
    ViewBag.TableUrl = Url.Action("List", "Notice");
}

@section toolbar{
<div id="toolbar" class="btn-group">
    @FormHelpers.Button(id: "btn_add", icon: "glyphicon-plus", permission: true, btnStyle: "primary", title: "新增", toggle: "modal", target: "modal", href: Url.Action("Add", "Notice"))
</div>
    <div class="modal inmodal" id="modal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content animated fadeIn">
            </div>
        </div>
    </div>
<div id="hidToolbar" class="hide">
    @FormHelpers.Button(id: "btn_edit", icon: "glyphicon-pencil", permission: true, a: true, href: Url.Action("Edit", "Notice"), btnStyle: "warning ", title: "修改", toggle: "modal", target: "modal", hf: true)
    @FormHelpers.Button(id: "ajax_delete", icon: "glyphicon-remove", permission: true, a: true, href: Url.Action("Delete", "Notice"), btnStyle: "danger", title: "删除", hf: true, ajax: "del(this)")
</div>
}
@section table{
    <th data-field="Id" data-width="50">ID</th>
    <th data-field="ServerIds" data-sortable="true">服务器列表</th>
    <th data-field="StartDate">开始日期</th>
    <th data-field="EndDate">结束日期</th>
    <th data-field="RepeatTime">间隔</th>
    <th data-field="Contents">内容</th>
    <th data-field="Type">推送位置</th>
    <th data-field="Status" data-width="80" data-align="center">状态</th>
    <th data-field="IdOp" data-width="90" data-formatter="operateInfo" data-align="center">操作</th>
}

