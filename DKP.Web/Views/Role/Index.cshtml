@{
    Layout = "~/Views/Shared/_RightTableLayout.cshtml";
    ViewBag.TableUrl = Url.Action("List", "Role");
}

@section toolbar{
    <div id="toolbar" class="btn-group">
        @FormHelpers.Button(id: "btn_add", icon: "glyphicon-plus", permission: true, btnStyle: "primary", title: "新增", toggle: "modal", target: "modal", href: Url.Action("Add", "Role"))
    </div>
    <div class="modal inmodal" id="modal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content animated fadeIn">
            </div>
        </div>
    </div>
    <div id="hidToolbar" class="hide">
        @FormHelpers.Button(id: "btn_edit", icon: "glyphicon-pencil", permission: true, a:true,href: Url.Action("Edit", "Role"), btnStyle: "warning ", title: "修改", toggle: "modal", target: "modal", hf: true)
        @FormHelpers.Button(id: "ajax_delete", icon: "glyphicon-remove", permission: true, a:true, href: Url.Action("Delete", "Role"), btnStyle: "danger", title: "删除", hf: true, ajax: "del(this)")
    </div>
}
@section table{
    <th data-field="Name">名称</th>
    <th data-field="Remark">备注</th>
    <th data-field="Id" data-width="80" data-formatter="operateInfo">操作</th>
}

